<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="@color/bildirimLayoutBG">
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/katman_avatarbg2"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/comAvatar"
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@mipmap/avatar16" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_weight="99"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comuserRName"
                    android:text="Emre ÇOBAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>
                <TextView
                    android:text=" • "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/comuserName"
                    android:text="emrecoban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/comDep"
                android:textColor="#abaaaa"
                android:text="Bilgisayar Programcılığı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/koyusiyah"
            android:id="@+id/comComment"
            android:textIsSelectable="true"
            android:linksClickable="true"
            android:autoLink="web"
            android:textSize="14dp"
            android:text="Bir mesaj atılmış. Bir mesaj daha atabilirler. O halde sürekli mesaj atılabilir. Bu sonuçta test mesajı. Bakalım sağdan soldan ne kadar boşluk var falan. www.emrecoban.com.tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:background="@drawable/quote"
            android:textColor="@color/koyusiyah"
            android:id="@+id/gelenQuote"
            android:textIsSelectable="true"
            android:linksClickable="true"
            android:autoLink="web"
            android:textSize="14dp"
            android:text="Bir mesaj atılmış. Bir mesaj daha atabilirler. O halde sürekli mesaj atılabilir. Bu sonuçta test mesajı. Bakalım sağdan soldan ne kadar boşluk var falan. www.emrecoban.com.tr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/comID"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="100"
        android:background="@drawable/shape_bildirim_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:gravity="right">
        <ImageView
            android:id="@+id/comReply"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/reply"/>
        <ImageView
            android:id="@+id/comQuote"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/quote"/>
        <ImageView
            android:id="@+id/comReport"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/report"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="98"
            android:id="@+id/comDate"
            android:textColor="#abaaaa"
            android:gravity="end"
            android:text="30 dakika önce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>