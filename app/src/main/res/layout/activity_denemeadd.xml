<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Deneme Adı:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:singleLine="true"
            android:hint="Dikey Geçiş Asistanı"
            android:paddingLeft="10dp"
            android:id="@+id/etdDenemeAd"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Sayısal Net:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="5"
            android:hint="0"
            android:paddingLeft="10dp"
            android:id="@+id/etdSayNet"
            android:imeOptions="actionDone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Sözel Net:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="5"
            android:hint="0"
            android:paddingLeft="10dp"
            android:id="@+id/etdSozNet"
            android:imeOptions="actionDone"/>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Sayısal Puan:"
            android:padding="10dp"
            android:textSize="17dp"/>

        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="7"
            android:hint="0"
            android:paddingLeft="10dp"
            android:id="@+id/etdSayPuan"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Sözel Puan:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="7"
            android:hint="0"
            android:paddingLeft="10dp"
            android:id="@+id/etdSozPuan"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="E.A. Puan:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <EditText
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="7"
            android:hint="0"
            android:paddingLeft="10dp"
            android:id="@+id/etdEAPuan"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Tarih:"
            android:padding="10dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="01.01.2020"
            android:padding="10dp"
            android:textSize="17dp"
            android:id="@+id/etdTarih"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="right">
        <Button
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deneme Ekle"
            android:id="@+id/btndEkle"/>
    </LinearLayout>

</LinearLayout>