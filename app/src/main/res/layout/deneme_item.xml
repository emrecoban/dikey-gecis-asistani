<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="@color/bildirimLayoutBG">

    <LinearLayout
        android:background="@drawable/shape_bildirim"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_marginBottom="6dp">
        <TextView
            android:id="@+id/tvDenemeAd"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Dikey Geçiş Asistanı Denemesi"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Sayısal Net"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Sözel Net"
            android:padding="5dp"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvSayNet"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvSozNet"
            android:padding="5dp"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="90"
        android:id="@+id/sonuc17Layout">
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Sayısal"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Sözel"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/eaTxt17"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="E.A."
            android:padding="5dp"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="90"
        android:id="@+id/sonuc17Layout2">
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvPuanSay"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvPuanSoz"
            android:padding="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvPuanEA"
            android:padding="5dp"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_bildirim_2"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginTop="6dp">
        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@mipmap/btnnegatif"
                android:id="@+id/btndSil"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTarih"
            android:gravity="right"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#abaaaa"
            android:text="05.07.2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
