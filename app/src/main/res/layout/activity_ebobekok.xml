<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LinearBG"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/activity_ebobekok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/LinearBG"
        tools:context="tr.com.emrecoban.dgsasistani.EbobEkok">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_gravity="center">
            <EditText
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:id="@+id/sayi1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/sayi2"/>
            <EditText
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:id="@+id/sayi2"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/sayi3"/>
            <EditText
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:id="@+id/sayi3"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/sayi4"/>
            <EditText
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:id="@+id/sayi4"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hesapla"
            android:layout_marginBottom="10dp"
            android:id="@+id/hesapla"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/LL1"
            android:weightSum="100">
            <TextView
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:text="EBOB"
                android:padding="12dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:text="EKOK"
                android:padding="12dp"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/LL2"
            android:weightSum="100">
            <TextView
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/tvEbob"
                android:padding="12dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/tvEkok"
                android:padding="12dp"
                android:textSize="17dp"/>
        </LinearLayout>


            <TextView
                android:id="@+id/carpanBaslikEBOB"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En Büyük Ortak Bölen"
                android:background="@drawable/shape_zaman"
                android:textColor="#fff"
                android:padding="12dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/LL3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:background="@drawable/left_border"
                    android:layout_weight="2"
                    android:id="@+id/carpan05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/carpanBaslikEKOK"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En Küçük Ortak Kat"
                android:background="@drawable/shape_zaman"
                android:textColor="#fff"
                android:padding="12dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/LL4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_weight="2"
                    android:id="@+id/carpan4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:background="@drawable/left_border"
                    android:layout_weight="2"
                    android:id="@+id/carpan5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

    </LinearLayout>
</ScrollView>